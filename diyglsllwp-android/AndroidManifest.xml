<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softwaresemantics.diyglsllwp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.software.live_wallpaper" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_diyglsllwp"
        android:label="@string/app_name" >
        <activity
            android:name="com.softwaresemantics.diyglsllwp.ShaderGalleryActivity"
            android:allowTaskReparenting="true"
            android:label="@string/title_app"
            android:taskAffinity="com.softwaresemantics.diyglsllwp.Gallery" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- <activity -->
        <!-- android:name="com.softwaresemantics.diyglsllwp.MainActivity" -->
        <!-- android:configChanges="keyboard|keyboardHidden|orientation|screenSize" -->
        <!-- android:label="@string/app_name" -->
        <!-- android:screenOrientation="landscape" > -->


        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->

        <service
            android:name="com.softwaresemantics.diyglsllwp.LiveWallpaper"
            android:allowTaskReparenting="true"
            android:icon="@drawable/ic_diyglsllwp"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER"
            android:launchMode="singleTask"
            android:process=":LWP"
            android:taskAffinity="com.softwaresemantics.diyglsllwp.LWP" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/livewallpaper" />
        </service>

        <activity
            android:name="com.softwaresemantics.diyglsllwp.LivewallpaperSettings"
            android:allowTaskReparenting="false"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:process=":LWP"
            android:taskAffinity="com.softwaresemantics.diyglsllwp.LWP" >
        </activity>
    </application>

</manifest>